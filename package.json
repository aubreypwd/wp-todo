{
  "name": "wp-todo",
  "title": "WP Todo",
  "version": "1.0.0",
  "description": "A todo for your WordPress powered site.",
  "author": {
    "name": "Aubrey Portwood and Eric Fuller",
    "url": "https://github.com/aubreypwd"
  },
  "scripts": {
    "start": "webpack --watch",
    "build": "NODE_ENV=production webpack -p --config webpack.prod.config.js --progress --colors",
    "test:app": "babel-tape-runner test/**/*.test.js | tap-spec",
    "test:tdd": "nodemon -x \"babel-tape-runner test/**/*.test.js | tap-spec\"",
    "test": "dockunit",
    "preversion": "npm test",
    "version": "grunt version && git add .",
    "jsonserver": "json-server --watch src/api/todos.json --port 8080"
  },
  "license": "GPLv2",
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-tape-runner": "^2.0.1",
    "browser-sync": "^2.18.7",
    "browser-sync-webpack-plugin": "^1.1.4",
    "del": "latest",
    "glob": "latest",
    "grunt": "^1.0.1",
    "grunt-banner": "^0.6.0",
    "grunt-cli": "latest",
    "grunt-contrib-clean": "latest",
    "grunt-contrib-compress": "latest",
    "grunt-contrib-copy": "latest",
    "grunt-text-replace": "latest",
    "grunt-wp-deploy": "latest",
    "grunt-wp-i18n": "latest",
    "load-grunt-tasks": "latest",
    "mustache-loader": "^0.4.1",
    "nodemon": "^1.11.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "uuid": "^3.0.1",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.22.0",
    "css-loader": "^0.26.1",
    "eslint-config-wordpress": "^1.1.0",
    "extract-text-webpack-plugin": "beta",
    "mitt": "^1.0.1",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.2.2",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1"
  }
}
